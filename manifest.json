{
  "manifest_version": 3,
  "name": "Twitch Auto Opener",
  "version": "1.0",
  "description": "Automatically opens Twitch channels when they start streaming.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
